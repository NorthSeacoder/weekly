---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import LatestWeeklyList from '~/components/pages/LatestWeeklyList.astro';
import Button from '~/components/ui/Button.astro';

const metadata = {
    title: '我不知道的周刊',
    ignoreTitleTemplate: true
};
---

<Layout metadata={metadata}>
    <!-- 极简优雅 Hero Section -->
    <Hero
        tagline="AI 驱动的前端技术周刊">
        
        <Fragment slot='title'>
            <span class="font-light">我不知道的</span><span class="font-bold">周刊</span>
        </Fragment>
 
        <Fragment slot='subtitle'>
            <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 font-light leading-relaxed max-w-3xl mx-auto">
                发现前端技术的未知之美，每周精选优质内容
            </p>
        </Fragment>

        <Fragment slot='bg'>
        </Fragment>

        <Fragment slot='actions'>
            <Button href="/weekly" variant="primary" size="md" class="px-6 py-3 text-base font-medium">开始阅读</Button>
            <Button href="#latest-content" variant="secondary" size="md" class="px-6 py-3 text-base font-medium">最新内容</Button>
        </Fragment>
    </Hero>
    
    <!-- 最新内容区域 -->
    <section id="latest-content" class="scroll-mt-20">
        <LatestWeeklyList />
    </section>
</Layout>


