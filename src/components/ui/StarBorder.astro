---
import { cn } from '@/lib/utils';

interface Props {
    as?: 'button' | 'div' | 'a';
    class?: string;
    color?: string;
    speed?: string;
}

const {
    as: Component = 'button',
    class: className = '',
    color = 'white',
    speed = '6s',
    ...rest
} = Astro.props;

const containerClasses = cn(
    'relative inline-block py-[1px] overflow-hidden rounded-[20px]',
    className
);

const starEffectClasses = {
    bottom: cn(
        'absolute w-[300%] h-[50%] opacity-70',
        'bottom-[-11px] right-[-250%] rounded-full',
        'animate-star-movement-bottom z-0'
    ),
    top: cn(
        'absolute w-[300%] h-[50%] opacity-70',
        'top-[-10px] left-[-250%] rounded-full',
        'animate-star-movement-top z-0'
    )
};

const contentClasses = cn(
    'relative z-1',
    'bg-gradient-to-b from-black to-gray-900',
    'border border-gray-800',
    'text-white text-center text-[16px]',
    'py-[16px] px-[26px] rounded-[20px]'
);
---
<Component class={containerClasses} {...rest}>
    {/* 底部星光效果 */}
    <div
        class={starEffectClasses.bottom}
        style={{
            background: `radial-gradient(circle, ${color}, transparent 10%)`,
            animationDuration: speed,
        }}
    />
    
    {/* 顶部星光效果 */}
    <div
        class={starEffectClasses.top}
        style={{
            background: `radial-gradient(circle, ${color}, transparent 10%)`,
            animationDuration: speed,
        }}
    />
    
    {/* 内容区域 */}
    <div class={contentClasses}>
        <slot />
    </div>
</Component>

<style>
    @keyframes star-movement-bottom {
        from {
            transform: translateX(-100%) rotate(0deg);
        }
        to {
            transform: translateX(0) rotate(360deg);
        }
    }

    @keyframes star-movement-top {
        from {
            transform: translateX(0) rotate(0deg);
        }
        to {
            transform: translateX(100%) rotate(-360deg);
        }
    }

    .animate-star-movement-bottom {
        animation: star-movement-bottom linear infinite;
    }

    .animate-star-movement-top {
        animation: star-movement-top linear infinite;
    }
</style> 