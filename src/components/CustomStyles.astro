---
import '@fontsource-variable/inter';
import 'highlight.js/styles/nnfx-dark.min.css';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable', sans-serif;
    --aw-font-serif: 'Inter Variable', serif;
    --aw-font-heading: 'Inter Variable', sans-serif;

    /* Deep Warm Dark Theme (Claude-inspired) */
    /* Using HSL values for compatibility with tailwind.config.ts */
    
    /* Primary: Warm Orange/Clay */
    --primary: 28 90% 65%;
    --primary-foreground: 0 0% 100%;
    --primary-hover: 28 90% 60%;
    --primary-soft: 28 90% 15%;
    --primary-muted: 28 40% 25%;
    
    /* Secondary: Darker Warm Gray */
    --secondary: 30 5% 15%;
    --secondary-foreground: 30 10% 90%;
    --secondary-hover: 30 5% 20%;
    
    /* Accent */
    --accent: 30 5% 15%;
    --accent-foreground: 30 10% 90%;
    --accent-warm: 25 95% 53%;
    --accent-cool: 221 83% 53%;
    
    /* Muted */
    --muted: 30 5% 15%;
    --muted-foreground: 30 5% 60%;
    
    /* Background: Deep Dark Warm Gray */
    --background: 30 5% 8%;
    --foreground: 30 10% 90%;
    
    /* Surface */
    --surface: 30 5% 10%;
    --surface-elevated: 30 5% 12%;
    --surface-hover: 30 5% 14%;
    
    /* Card */
    --card: 30 5% 10%;
    --card-foreground: 30 10% 90%;
    --card-border: 30 5% 15%;
    --card-shadow: 0 0 0 1px rgba(255,255,255,0.05);
    
    /* Borders & Inputs */
    --border: 30 5% 15%;
    --input: 30 5% 15%;
    --ring: 28 90% 65%;
    
    /* Status Colors */
    --success: 142 70% 45%;
    --success-foreground: 0 0% 10%;
    
    --warning: 38 90% 50%;
    --warning-foreground: 0 0% 10%;
    
    --error: 0 80% 60%;
    --error-foreground: 0 0% 100%;
    
    --info: 210 80% 60%;
    --info-foreground: 0 0% 100%;

    /* Legacy color mappings */
    --aw-color-primary: hsl(var(--primary));
    --aw-color-secondary: hsl(var(--secondary));
    --aw-color-accent: hsl(var(--accent));
    --aw-color-text-heading: hsl(var(--foreground));
    --aw-color-text-default: hsl(var(--foreground));
    --aw-color-text-muted: hsl(var(--muted-foreground));
    --aw-color-bg-page: hsl(var(--background));

    /* Spacing system - Optimized for breathing room */
    --space-xs: 0.5rem;
    --space-sm: 0.75rem;
    --space-md: 1.25rem; /* Increased */
    --space-lg: 2rem;    /* Increased */
    --space-xl: 3rem;
    --space-2xl: 4rem;
    --space-3xl: 6rem;
    --space-4xl: 8rem;
    --space-5xl: 10rem;
    
    /* Typography scale - Optimized for readability */
    --text-xs: 0.8125rem;
    --text-sm: 0.9375rem;
    --text-base: 1.0625rem; /* Slightly larger base */
    --text-lg: 1.25rem;
    --text-xl: 1.5rem;
    --text-2xl: 1.875rem;
    --text-3xl: 2.25rem;
    --text-4xl: 3rem;
    --text-5xl: 3.75rem;
    --text-6xl: 4.5rem;
    --text-7xl: 6rem;
    
    /* Border radius */
    --radius-sm: 0.25rem;
    --radius: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
    --radius-2xl: 1.5rem;
    --radius-3xl: 2rem;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.3);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.3);
    --shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    --shadow-3xl: 0 35px 60px -12px rgba(0, 0, 0, 0.5);
    --shadow-inner: inset 0 2px 4px 0 rgba(0, 0, 0, 0.06);
    
    /* Animation durations */
    --duration-fast: 150ms;
    --duration-normal: 300ms;
    --duration-slow: 500ms;
    --duration-slower: 700ms;

    ::selection {
      background-color: hsl(var(--primary) / 0.3);
      color: hsl(var(--foreground));
    }
  }

  /* Ensure dark mode values are applied even if .dark class is present */
  .dark {
    /* Inherit from root since we made root dark */
    --primary: 28 90% 65%;
    --primary-foreground: 0 0% 100%;
    --background: 30 5% 8%;
    --foreground: 30 10% 90%;
  }
  
  /* Remove code backticks */
  .prose :where(code)::before,
  .prose :where(code)::after {
    content: none !important;
  }
</style>
