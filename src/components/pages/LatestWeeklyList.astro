---
import { getWeeklyPosts } from '@/src/utils/contents/weekly'

const weekly = await getWeeklyPosts()

const latestWeeklyList = weekly.slice(0, 12);
---

<section class="py-12  dark:bg-dark">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">最新周刊</h2>
        <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {latestWeeklyList.map((weekly) => (
                <li class="bg-white dark:bg-dark-lighter rounded-lg shadow-md overflow-hidden">
                    <a class="block p-6 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200">
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{weekly.title}</h3>
                        <p class="text-gray-600 dark:text-gray-400">{weekly.date}</p>
                    </a>
                </li>
            ))}
        </ul>
        <div class="mt-8 text-center">
            <a href="/weekly" class="inline-block px-4 py-2 bg-accent hover:bg-accent-dark text-white font-semibold rounded-md transition-colors duration-200">
                更多内容
            </a>
        </div>
    </div>
</section> 