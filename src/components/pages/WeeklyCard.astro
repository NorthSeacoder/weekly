

<div class="stat-card p-6" data-name="stat-card">
    <div class="flex justify-between items-start mb-4">
        <div class="flex items-center gap-3">
            <span class="text-2xl">{icon}</span>
            {renderTags()}
        </div>
        <button class="text-sm text-purple-400 hover:text-purple-300" data-name="view-details-button">
            View Details
        </button>
    </div>
    
    <h3 class="text-gray-400 mb-2" data-name="stat-title">{title}</h3>
    <div class="flex items-end justify-between">
        <span class="text-4xl font-semibold" data-name="stat-value">{value}</span>
        <span class={`text-sm ${change >= 0 ? 'text-green-400' : 'text-red-400'}`} data-name="stat-change">
            {change >= 0 ? '↑' : '↓'} {Math.abs(change)}%
        </span>
    </div>
</div>