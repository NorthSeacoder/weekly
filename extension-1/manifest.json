{
    "manifest_version": 3,
    "name": "AI Page Summarizer",
    "version": "1.0",
    "description": "使用 AI 总结页面内容并生成标签",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}
