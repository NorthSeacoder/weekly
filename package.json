{
    "name": "weekly",
    "version": "0.1.0",
    "private": true,
    "bin": {
        "create-weekly": "./bin/create-weekly.mjs",
        "create-blog": "./bin/create-blog.mjs"
    },
    "scripts": {
        "cl": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
        "cz": "git add . && git-cz",
        "dev": "astro dev",
        "dev:file": "cross-env DATA_SOURCE=filesystem tsx scripts/dev-datasource-info.ts && cross-env DATA_SOURCE=filesystem astro dev",
        "dev:db": "cross-env DATA_SOURCE=database tsx scripts/dev-datasource-info.ts && cross-env DATA_SOURCE=database astro dev",
        "build": "astro build",
        "preview": "astro preview",
        "astro": "astro",
        "generate:rss": "tsx generateRSS.ts",
        "postbuild": "pnpm run generate:rss",
        "publish:quail": "tsx publishToQuail.ts",
        "generate:draft": "tsx ./scripts/generateDraft.ts",
        "generate:blog": "node ./bin/create-blog.mjs",
        "upload": "tsx scripts/upload.ts",
        "convertImages": "tsx scripts/convertImages.ts",
        "migrate:mysql": "tsx scripts/migrate-to-mysql.ts",
        "migrate:clean": "tsx scripts/migrate-to-mysql.ts --clean",
        "migrate:check": "tsx scripts/migrate-to-mysql.ts --dry-run",
        "db:fix": "tsx scripts/fix-database-issues.ts",
        "db:fix-garbled": "tsx scripts/fix-garbled-data.ts",
        "db:fix-refs": "tsx scripts/fix-content-type-references.ts",
        "db:clear": "tsx scripts/fix-database-issues.ts --clear",
        "db:status": "tsx -e \"import { getDataSourceInfo } from './src/utils/contents/unified-content'; console.log('数据源状态:', getDataSourceInfo());\"",
        "db:check": "tsx scripts/check-database-tables.ts",
        "db:fix-charset": "tsx scripts/check-database-tables.ts --fix-charset",
        "db:fix-empty": "tsx scripts/check-database-tables.ts --fix-empty",
        "db:fix-all": "tsx scripts/check-database-tables.ts --fix-all",
        "db:add-categories": "tsx scripts/add-missing-categories.ts",
        "db:analyze-unnamed": "tsx scripts/analyze-unnamed-articles.ts",
        "dev:status": "tsx scripts/dev-datasource-info.ts",
        "dev:compare": "tsx scripts/compare-data-sources.ts",
        "weekly:add": "tsx scripts/create-weekly-item.ts",
        "weekly:add-file": "tsx scripts/create-weekly-item.ts --file",
        "sync:files": "tsx scripts/sync-files-to-db.ts"
    },
    "dependencies": {
        "@astrojs/check": "^0.9.4",
        "@astrojs/sitemap": "^3.2.1",
        "@astrolib/seo": "1.0.0-beta.8",
        "@fontsource-variable/inter": "^5.1.1",
        "@sentry/astro": "^9.1.0",
        "@sentry/replay": "^7.116.0",
        "astro": "^5.1.8",
        "astro-icon": "^1.1.5",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.0",
        "dayjs": "^1.11.10",
        "feed": "^4.2.2",
        "gray-matter": "^4.0.3",
        "highlight.js": "^11.11.1",
        "js-yaml": "^4.1.0",
        "limax": "4.1.0",
        "lodash.merge": "^4.6.2",
        "mysql2": "^3.14.1",
        "node-cache": "^5.1.2",
        "rehype-highlight": "^7.0.2",
        "rehype-starry-night": "^2.2.0",
        "rehype-stringify": "^10.0.1",
        "remark": "^15.0.1",
        "remark-gemoji": "^8.0.0",
        "remark-gfm": "^4.0.1",
        "remark-html": "^16.0.1",
        "remark-parse": "^11.0.0",
        "remark-rehype": "^11.1.1",
        "tailwind-merge": "^2.2.1",
        "tailwindcss-animate": "^1.0.7",
        "three": "^0.171.0",
        "unified": "^11.0.5",
        "unpic": "^4.0.0"
    },
    "devDependencies": {
        "@astrojs/mdx": "^4.0.8",
        "@astrojs/tailwind": "^5.1.5",
        "@iconify-json/tabler": "^1.2.15",
        "@langchain/openai": "^0.0.14",
        "@tailwindcss/typography": "^0.5.16",
        "@types/cli-progress": "^3.11.6",
        "@types/js-yaml": "^4.0.9",
        "@types/lodash.merge": "^4.6.9",
        "@types/mdx": "^2.0.13",
        "@types/node": "^20",
        "ansi-colors": "^4.1.3",
        "autoprefixer": "^10.0.1",
        "cli-progress": "^3.12.0",
        "commitizen": "^4.3.0",
        "conventional-changelog": "^5.1.0",
        "conventional-changelog-cli": "^4.1.0",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "dotenv": "^16.0.0",
        "eslint": "^8",
        "mdast-util-to-string": "^4.0.0",
        "postcss": "^8",
        "puppeteer": "^23.8.0",
        "quail-js": "^0.3.18",
        "reading-time": "^1.5.0",
        "sharp": "^0.33.5",
        "tailwindcss": "^3.3.0",
        "tsx": "^4.19.2",
        "typescript": "^5.0.2"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
